{% extends '::base.html.twig' %}

{% block materialize %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
    <script>
        $(document).ready(function () {
            Materialize.updateTextFields();
            $('select').material_select();
        });
    </script>
{% endblock materialize %}

{% block body %}
    {% include 'HarasBundle::nav_admin.html.twig' %}
    <body id="_admin">
    <div class="container">
        <div class="cadre">
            <div class="row">
                <h1 class="admin_title">Media edit</h1>
                {{ form_start(edit_form) }}
                <div class="col m12">
                    <p>Current media: </p>
                    <img src="{{ asset(medium.path) }}" alt="{{ medium.alt }}" height=100px>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    Change current media:
                    {{ form_errors(edit_form.file) }}
                    {{ form_widget(edit_form.file) }}
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    Alternative text:
                    <div class="input-field inline">
                        {{ form_errors(edit_form.alt) }}
                        {{ form_widget(edit_form.alt) }}
                    </div>
                </div>
                <div class="row">
                    <div class="admin_button col m6">
                        <div class="waves-effect waves-light btn">
                            <input type="submit" value="Edit"/>
                        </div>
                    </div>
                {{ form_end(edit_form) }}
                    <div class="admin_button col m12">
                        <a class="waves-effect waves-light btn" href="{{ path('page_show', { 'name': page.name }) }}">Back to the list</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>
{% endblock %}
