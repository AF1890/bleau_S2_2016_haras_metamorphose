<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Haras de la m√©tamorphose{% endblock %}</title>
        {% block materialize %}
        {% endblock materialize %}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/haras/styles/stylesheets/style.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('licos.ico') }}" />
    </head>
    <body>
        <div>
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <a href="{{ path('page_index') }}">You are already connected!</a>
            {% endif %}
        </div>

        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}

        <div>
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
    </body>
</html>
